%h1 Listing Posts
%table
  %tr
    %th Title
    %th Text
    %th
    %th
    %th
 
  - @posts.each do |post|
    %tr
      %td
        = post.title
      %td
        = post.text
      %td
        = link_to 'Show', :action => :show, :id => post.id
      %td
        = link_to 'Edit', :action => :edit, :id => post.id
      %td
        = link_to 'Destroy', { :action => :destroy, :id => post.id },:remote => true, :confirm => 'Are you sure?', :method => :delete