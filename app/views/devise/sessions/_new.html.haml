%div Войти
= form_for(User.new, :as => :user, :url => session_path(:user)) do |f|
  %div
    = f.label :email
    %br
    = f.email_field :email, :autofocus => true, :style => "width:200px;" 

  %div
    = f.label :password
    %br
    = f.password_field :password, :style => "width:200px;" 
  %div  
    = f.check_box :remember_me 
    = f.label :remember_me

  %div
    = f.submit "Войти"
